public class NoisyClient
{
  public static void allNoises(Noisy[] noisyThings)
  {
    for (int i = 0 ; i < noisyThings.length ; i++) {
      noisyThings[i].makeNoise();
    }
  }
  
  public static void main(String foo[])
  {
    Noisy[] noisyThings = {new Cat("Felix"), new Dog("Fido"), new Car()};   
    
    allNoises(noisyThings);
  }
}                        
